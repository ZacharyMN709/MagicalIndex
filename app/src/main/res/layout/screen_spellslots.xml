<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundScreen">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ICONHOLDER"
                    android:layout_alignTop="@+id/ICONHOLDER"
                    android:layout_alignBottom="@+id/ICONHOLDER">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - -"
                        android:id="@+id/tvClass"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ritual?"
                                android:id="@+id/textView48"
                                android:textIsSelectable="false"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- - -"
                                android:id="@+id/tvRitual"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/textView48" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus?"
                                android:id="@+id/textView58"
                                android:textIsSelectable="false"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- - -"
                                android:id="@+id/tvFocus"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/textView58" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ICONHOLDER"
                    android:padding="4dp"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/ivIcon"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_spellbook" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Known Spells:"
                    android:id="@+id/textView62"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvKnown"
                    android:layout_toRightOf="@+id/textView62" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Prepared Spells:"
                    android:id="@+id/textView64"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvPrepared"
                    android:layout_toRightOf="@+id/textView64" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Spell Attack Bonus:"
                    android:id="@+id/textView66"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvAttack"
                    android:layout_toRightOf="@+id/textView66" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Spell Save AC:"
                    android:id="@+id/textView60"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvSave"
                    android:layout_toRightOf="@+id/textView60" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:id="@+id/WARLOCK1">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Slot Level:"
                    android:id="@+id/textView10"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvSlotLevel"
                    android:layout_toRightOf="@+id/textView10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:id="@+id/WARLOCK2">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Invocations:"
                    android:id="@+id/textView65"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvInvocations"
                    android:layout_toRightOf="@+id/textView65" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewList"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="72dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/SHADOW" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/listfab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/ic_refresh_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:tint="@color/colorFABPrimary"
                    android:onClick="fabClicked"
                    app:backgroundTint="@color/colorFABBackground" />
            </RelativeLayout>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentholder"
        android:elevation="10dp" />

</RelativeLayout>