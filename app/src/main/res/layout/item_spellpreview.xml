<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundItem"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/MAINHOLDER">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/DIVIDER"
            android:layout_marginLeft="12dp"
            android:background="@color/colorDivider"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/NAMEHOLDER"
            android:layout_toLeftOf="@+id/ICONHOLDER"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NAMEHOLDER"
            android:clickable="true"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toLeftOf="@+id/LEVELHOLDER">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Spell Name"
                android:id="@+id/tvSpellName"
                android:textSize="18dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_below="@+id/tvSpellSchool"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- - - - - -"
                android:id="@+id/tvSpellSchool"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextSecondaryonBackground"
                android:layout_marginLeft="4dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/LEVELHOLDER"
            android:layout_alignParentBottom="false"
            android:clickable="true"
            android:background="@color/colorSecondary"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/ICONHOLDER"
            android:layout_alignBottom="@+id/TEXTHOLDER"
            android:layout_marginBottom="4dp"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="16dp"
                android:text="LEVEL"
                android:id="@+id/textView51"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorTextonSecondary" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="- - -"
                android:id="@+id/tvSpellLevel"
                android:layout_below="@+id/textView51"
                android:textSize="16dp"
                android:textIsSelectable="false"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorTextonSecondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_triangle"
                android:backgroundTint="@color/colorBackgroundItem"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/DIVIDER"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/TEXTHOLDER"
            android:layout_toLeftOf="@+id/LEVELHOLDER">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus:"
                    android:id="@+id/textView52"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ritual:"
                    android:id="@+id/textView56"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvConcentration"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvRitual"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casting Time"
                    android:id="@+id/textView50"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvCastingTime"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/ICONHOLDER"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_alignBottom="@+id/TEXTHOLDER"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/ivFavourite"
                android:src="@drawable/ic_favorite_white_24dp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:tint="@color/RED_A700" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/ivButton"
                android:src="@drawable/ic_spellbook"
                android:layout_alignParentBottom="true"
                android:tint="@color/colorPrimary"
                android:padding="4dp"
                android:layout_margin="2dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>