<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/colorBackgroundItem"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/MAINHOLDER">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/LEVELHOLDER"
            android:layout_alignParentBottom="false"
            android:clickable="true"
            android:background="@color/colorSecondary"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="16dp"
                android:text="LEVEL"
                android:id="@+id/textView51"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorTextonSecondary" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="- - -"
                android:id="@+id/tvSpellLevel"
                android:layout_below="@+id/textView51"
                android:textSize="16dp"
                android:textIsSelectable="false"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorTextonSecondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:background="@drawable/ic_triangle"
                android:backgroundTint="@color/colorBackgroundItem"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/LEVELHOLDER">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Max Uses"
                    android:id="@+id/textView50"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvMaxSpells"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView50"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/ivDec"
                android:layout_gravity="center"
                android:src="@drawable/ic_circle_black_remove_24dp"
                android:tint="@color/colorSecondary"
                android:background="@color/PURE_Clear" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Current Uses"
                    android:id="@+id/textView49"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvCurrentSpells"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView49"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/ivInc"
                android:layout_gravity="center"
                android:src="@drawable/ic_circle_black_add_24dp"
                android:tint="@color/colorSecondary"
                android:background="@color/PURE_Clear" />

            <Space
                android:layout_width="12dp"
                android:layout_height="fill_parent" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>