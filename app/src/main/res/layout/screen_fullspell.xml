<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundScreen">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ICONHOLDER">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - -"
                        android:id="@+id/tvSpellName"
                        android:layout_marginLeft="12dp"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - -"
                        android:id="@+id/tvSpellSchool"
                        android:layout_below="@+id/tvSpellName"
                        android:layout_marginLeft="12dp"
                        android:textSize="20dp"
                        android:textIsSelectable="false"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ritual?"
                                android:id="@+id/textView48"
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:textIsSelectable="false"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- - -"
                                android:id="@+id/tvSpellRitual"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/textView48" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Concentration?"
                                android:id="@+id/textView58"
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:textIsSelectable="false"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="4dp"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- - -"
                                android:id="@+id/tvSpellConcentration"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/textView58" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ICONHOLDER"
                    android:padding="4dp"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivBard"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_bard" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivCleric"
                        android:layout_toRightOf="@+id/ivBard"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_cleric" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivDruid"
                        android:layout_toRightOf="@+id/ivCleric"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_druid" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivPaladin"
                        android:layout_below="@+id/ivBard"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_paladin" />

                    <RelativeLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@color/colorBackgroundScreen"
                        android:layout_toRightOf="@+id/ivPaladin"
                        android:layout_below="@+id/ivBard"
                        android:id="@+id/HOLDER"
                        android:layout_margin="2dp">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivRanger"
                        android:layout_below="@+id/ivBard"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_ranger"
                        android:layout_toRightOf="@+id/HOLDER" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivSorcerer"
                        android:layout_below="@+id/ivPaladin"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_sorcerer" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivWarlock"
                        android:layout_below="@+id/ivPaladin"
                        android:layout_toRightOf="@+id/ivSorcerer"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_warlock" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/ivWizard"
                        android:layout_below="@+id/ivRanger"
                        android:layout_toRightOf="@+id/ivWarlock"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_wizard" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:text="0"
                        android:id="@+id/tvSpellLevel"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textAlignment="center" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Cast Time:"
                    android:id="@+id/textView62"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvSpellTime"
                    android:layout_toRightOf="@+id/textView62" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Duration:"
                    android:id="@+id/textView64"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvSpellDuration"
                    android:layout_toRightOf="@+id/textView64" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Range:"
                    android:id="@+id/textView66"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvSpellRange"
                    android:layout_toRightOf="@+id/textView66" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Components:"
                    android:id="@+id/textView60"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextonBackground" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:id="@+id/tvSpellComponents"
                    android:layout_toRightOf="@+id/textView60" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:id="@+id/DESCRIPTION"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorTextonBackground" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView2" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSpellDescription"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorTextSecondaryonBackground"
                android:text="- - -" />
            </ScrollView>

        </LinearLayout>


</RelativeLayout>